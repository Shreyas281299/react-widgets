{
  "compilerOptions": {
    "jsx": "react",
    "experimentalDecorators": true,
    "allowJs": true,
    "lib": ["es6", "dom"],
    "rootDir": "",
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
  },
  "include": [
    "packages/@ciscospark/**/*",
    "packages/@webex/**/*",
    "./src"
  ],
  "exclude": [
    "packages/@ciscospark/**/dist/*",
    "packages/@webex/**/dist/*",
    "packages/@ciscospark/**/es/*",
    "packages/@webex/**/es/*",
    "packages/@ciscospark/**/cjs/*",
    "packages/@webex/**/cjs/*",
    "node_modules/**/*",
    "dist",
    "rollup.calling-config.js",
    "packages/@webex/widgets/rollup.config.js"
  ]
}
